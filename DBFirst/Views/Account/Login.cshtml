@model DBFirst.Models.LoginVM;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<section class="container-fluid bg">
    <section class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-3 col-lg-4 FormDesign">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
            <form class="">
                <h1 class="text-center text-dark lead" style="font-size:40px;">Login</h1>
                <div class="form-group">
                    <label for="exampleInputEmail1">User Name</label>
                    <input type="text" class="form-control" name="Email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="PassWord" placeholder="Password">
                </div>
                <div class="custom-control custom-checkbox form-group">
                    <input type="checkbox" class="custom-control-input" id="KeepLoggedIn" name="KeepLoggedIn">
                    <label for="rememberMe" class="custom-control-label">Remember me</label>
                </div>
                <button type="submit" class="btn btn-block btn-primary mt-2">Login</button>
                <a href="/Account/Create" class="text-center d-block mx-auto" style="font-size:13px;margin-top:5px;">SignUp</a>
                <a class="nav-link" style="color:white;" asp-area="" asp-controller="Account" asp-action="Create">SignUp</a>
                <p style="color:red;margin-top:8px;" class="text-center">@ViewBag.key</p>
            </form>
            }
        </div>
    </section>
</section>

